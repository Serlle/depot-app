<h2 class="text-xl font-semibold mb-2">Order Last - ID <%= @latest_order.id %></h2>
<p class="mb-4">Shipped to: <%= @latest_order.address %></p>

<table class="table-auto w-full text-left mb-4">
  <thead class="bg-gray-200">
    <tr>
      <th class="px-4 py-2">Product</th>
      <th class="px-4 py-2">Quantity</th>
      <th class="px-4 py-2">Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @latest_order.line_items.each do |item| %>
      <tr>
        <td class="border px-4 py-2"><%= item.product.title %></td>
        <td class="border px-4 py-2"><%= item.quantity %></td>
        <td class="border px-4 py-2"><%= number_to_currency item.total_price %></td>
      </tr>
    <% end %>
    <tr>
      <td class="border px-4 py-2 font-bold">Total</td>
      <td class="border px-4 py-2"></td>
      <td class="border px-4 py-2 font-bold"><%= number_to_currency @latest_order.line_items.map(&:total_price).sum %></td>
    </tr>
  </tbody>
</table>

<p class="text-lg">Paid by: <%= @latest_order.payment_type.name %></p>